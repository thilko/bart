%html
  %head
    %link{:href=>"/stylesheets/bart.css", :media=>"screen", :rel=>"stylesheet", :type=>"text/css"}
    %script{:type=>"test/javascript", :href=>"/javascripts/jquery-1.5.1.min.js"}
    %script{:type=>"test/javascript", :href=>"/javascripts/application.js"}

  %body
    %h1.headline Testserver Monitoring
    %table.data
      %thead
        %tr
          %th Name
          %th Status
          %th Time
          %th Message
      - @server.each do |server|
        %tr
          %td= server.name
          %td{ :class => server.status}= server.status
          %td= format_date server.statusdate
          %td= server.message
          - if server.deployable?
            %td
              %a{:data_submit_form => "/server/#{server.name}/deploy", :data_method => "put", :href => "#"} Deploy
